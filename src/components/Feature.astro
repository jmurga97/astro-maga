---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---
<div class="group">
  <div class="w-12 h-12 mb-4 flex items-center justify-center bg-gray-100 rounded-lg group-hover:bg-black group-hover:text-white transition-colors">
    <span class="text-xl">{icon}</span>
  </div>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>