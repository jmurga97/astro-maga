---
import type { Project } from '../../data/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---
<section class="py-20 px-4 sm:px-6 lg:px-8 max-w-3xl mx-auto">
  <div class="space-y-16">
    <div>
      <h2 class="text-2xl font-bold mb-4">Overview</h2>
      <p class="text-gray-600">{project.overview}</p>
    </div>

    <div class="flex flex-wrap gap-4 justify-between">
      <div>
        <h2 class="text-2xl font-bold mb-4">Role</h2>
        <p class="text-gray-600">{project.role}</p>
      </div>

      <div>
        <h2 class="text-2xl font-bold mb-4">Responsibilities</h2>
        <ul class="space-y-2">
          {project.process.map(step => (
            <li class="text-gray-600">{step}</li>
          ))}
        </ul>
      </div>
    </div>
    <div>
      <h2 class="text-2xl font-bold mb-4">Target Audience</h2>
      <p class="text-gray-600">{project.target}</p>
    </div>
    <div>
      <h2 class="text-2xl font-bold mb-4">Challenges & Limitations</h2>
      <p class="text-gray-600">{project.limitations}</p>
    </div>
    <div>
      <h2 class="text-2xl font-bold mb-4">Specifications</h2>
      <dl class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <dt class="font-semibold">Category</dt>
          <dd class="text-gray-600">{project.specifications.category}</dd>
        </div>
        <div>
          <dt class="font-semibold">Year</dt>
          <dd class="text-gray-600">{project.specifications.year}</dd>
        </div>
        <div>
          <dt class="font-semibold">Tools</dt>
          <dd class="text-gray-600">{project.specifications.tools.join(', ')}</dd>
        </div>
      </dl>
    </div>
    <div>
      <h2 class="text-2xl font-bold mb-4">Conclusion</h2>
      <p class="text-gray-600">{project.conclusion}</p>
    </div>
  </div>


  </div>
</section>