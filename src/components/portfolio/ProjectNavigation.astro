---
interface Props {
  previousSlug?: string;
  nextSlug?: string;
}

const { previousSlug, nextSlug } = Astro.props;
---
<nav class="fixed bottom-8 left-1/2 -translate-x-1/2 bg-white/80 backdrop-blur-sm px-4 py-2 rounded-full shadow-lg">
  <div class="flex items-center gap-8">
    {previousSlug && (
      <a href={`/work/${previousSlug}`} class="hover:text-gray-600">← Previous</a>
    )}
    <a href="/#projects" class="hover:text-gray-600">All Work</a>
    {nextSlug && (
      <a href={`/work/${nextSlug}`} class="hover:text-gray-600">Next →</a>
    )}
  </div>
</nav>