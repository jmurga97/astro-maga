---
import SocialIcons from './SocialIcons.astro';
---
<section class="min-h-screen flex items-center px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
  <div class="w-full pt-32 pb-20">
    <span class="text-gray-500 mb-6 block">Hello there!</span>
    <h1 class="text-6xl md:text-8xl font-bold mb-12 max-w-4xl">
      A portfolio made with ❤️
    </h1>
    <div class="flex flex-col md:flex-row md:items-center justify-between">
      <p class="text-xl text-gray-600 max-w-xl mb-8 md:mb-0">
